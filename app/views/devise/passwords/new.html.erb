<div class="container d-flex justify-content-center align-items-center min-vh-100" style="background: #f3f4f6;">
  <div class="w-100" style="max-width: 460px;">
    <h1 class="text-center mb-4" style="font-size: 36px; color: #111827;">Forgot your password?</h1>

    <div id="form">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, class: "form-label fw-semibold", style: "color: #111827;" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "you@example.com", class: "form-control", style: "border-radius: 8px;" %>
        </div>

        <div class="d-grid mt-3">
          <%= f.submit "Send reset password instructions", class: "btn w-100", style: "background-color: #3b82f6; color: white; font-weight: bold; border-radius: 20px;" %>
        </div>
      <% end %>

      <div class="text-center mt-3 small text-muted" style="display:flex;gap:30px">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
