<h1>Edit Todo</h1>
<div>
  <%= form_with(model: @todo, html:{id:"form"},local: true) do |form| %>
    
      <%= form.label :title %>
      <%= form.text_field :title, placeholder: "Enter title" %>
      <%= form.label :description %>
      <%= form.text_field :description, placeholder: "Enter description" %>
      <%= form.label :done, "Is Completed?" %>
      <%= form.check_box :done %>
      <div>
        <%= form.submit "Update Todo" %>
      </div>
  <% end %>
</div>

<%= link_to "Back to list", todos_path %>